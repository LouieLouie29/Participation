<Window x:Class="WPF___2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF___2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel x:Name="lblMaxVal">
            <StackPanel.Background>
                <ImageBrush ImageSource="Squidward.PNG"/>
            </StackPanel.Background>
            <Label Content="Maximum Value:" Foreground="White" FontSize="16"/>
            <TextBox x:Name="txtbox" Height="23" Width="100" Margin="0,0,675,0" TextWrapping="Wrap" Text="" FontSize="16"/>
            <RadioButton x:Name="rbOdd" Content="Odd" Margin="5,10,0,0" Foreground="White" FontSize="14" Checked="rbOdd_Checked"/>
            <RadioButton x:Name="rbEven" Content="Even" Margin="5,5,-0.4,0" Foreground="White" FontSize="14" Checked="rbEven_Checked"/>
            <ListBox x:Name="lstValues" Height="290" Width="70" Margin="5,10,720,0"/>


        </StackPanel>
        
    </Grid>
</Window>
